/*
 Programme : TriangleDePascal
 But : Calculer et afficher un triangle de Pascal en fonction du degré saisi par l'utilisateur.
 Date de dernière modification : 30 octobre 2015
 Auteur : Valentin GRAGLIA
 Dernière compilation : Linux
*/

#include <iostream>

using namespace std;

// void determinerTriangle();

int main()
{
    // VARIABLES
    unsigned short int tailleTab;
    int triangle[14][14];

    unsigned short int ligne;
    unsigned short int colonne;

    do
    {
        cout << "Saisissez le degré du triangle (max.13) : ";
        cin >> tailleTab;
    }
    while (tailleTab>13 || tailleTab<0);


    // TRAITEMENT

    //
    for (ligne=0; ligne<=tailleTab; ligne++)
    {
        triangle[ligne][ligne]=1;
        triangle[ligne][0]=1;

        for (colonne=1; colonne<ligne; colonne++)
        {
            triangle[ligne][colonne] = triangle[ligne-1][colonne] + triangle[ligne-1][colonne-1];
        }
    }

    cout << "Triangle de Pascal de degre " << tailleTab << " : ";
    cout << endl;

    for (ligne=0; ligne<=tailleTab; ligne++)
    {
        if (ligne<=9)
        {
            cout << " N= " << ligne;
        }
        else
        {
            cout << " N=" << ligne;
        }

        for (colonne=0; colonne<=ligne; colonne++)
        {
            if (triangle[ligne][colonne] < 10)
            {
                cout << "    " << triangle[ligne][colonne];
            }
            else
            {
                if ((triangle[ligne][colonne] >= 10) && (triangle[ligne][colonne] < 100))
                {
                    cout << "   " << triangle[ligne][colonne];
                }
                else
                {
                    if ((triangle[ligne][colonne] >= 100) && (triangle[ligne][colonne] < 1000))
                    {
                        cout << "  " << triangle[ligne][colonne];
                    }
                    else
                    {
                        cout << " " << triangle[ligne][colonne];
                    }
                }
            }
        }

        cout << endl;
    }

    return 0;
}
